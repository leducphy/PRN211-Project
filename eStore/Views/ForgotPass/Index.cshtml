@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="vh-100" style="background-color: #9A616D;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img style="    border-radius: 1rem 1rem 1rem 1rem !important ;margin: 50px 45px 20px 20px  !important" src="https://afamilycdn.com/zoom/640_400/2019/11/12/chinese-girl-2-develops-severe-short-sightedness-after-playing-on-the-1573543389795672259934-crop-15735433964042065404662.jpg"
                                 alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">

                                <form method="POST" action="ForgotPass" id="contact-form">
                                    @Html.AntiForgeryToken()
                                    <div class="d-flex align-items-center mb-3 pb-1">
                                        <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                        <span class="h1 fw-bold mb-0">CodegangZ-Store</span>
                                    </div>

                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Forgot Password</h5>

                                    <div class="form-outline mb-4">
                                        <input id="contact-email" name="email" type="email" class="form-control" value="@ViewBag.Email" />                                                <label class="form-label" for="form2Example17">Email address</label>
                                    </div>

                                    <div class="pt-1 mb-4">
                                        <button type="submit" value="Send" class="btn btn-primary">
                                            Send
                                        </button>
                                    </div>
                                    <p style="margin-top:20px"><a href="/Login">Back to login</a></p>
                                </form>
                                @if (!string.IsNullOrEmpty(ViewBag.Message))
                                {
                                    <p class="alert alert-danger" role="alert">@ViewBag.Message</p>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


